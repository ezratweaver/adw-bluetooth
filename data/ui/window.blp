using Gtk 4.0;
using Adw 1;

template $Gjs_Window: Adw.ApplicationWindow {
  default-width: 650;
  default-height: 600;
  width-request: 360;
  height-request: 294;

  content: Adw.ToastOverlay toastOverlay {
    child: Adw.ToolbarView {
      [top]
      Adw.HeaderBar {
        [end]
        Switch bluetooth-toggle {}
      }

      content: Box {
        orientation: vertical;
        valign: center;

        Box disabled-state {
          orientation: vertical;
          halign: center;
          valign: center;
          spacing: 6;

          Image {
            icon-name: "bluetooth-disabled-symbolic";
            pixel-size: 100;
            margin-bottom: 30;

            css-classes: [
              'bluetooth-icon',
            ];
          }

          Label {
            label: _("Bluetooth Turned Off");

            css-classes: [
              'disabled-header',
            ];
          }

          Label {
            label: _("Turn on to connect devices.");
          }
        }

        Box enabled-state {}
      };
    };
  };
}

SizeGroup {
  mode: horizontal;
}