using Gtk 4.0;
using Adw 1;

template $Gjs_Window: Adw.ApplicationWindow {
  default-width: 650;
  default-height: 600;
  width-request: 360;
  height-request: 294;

  content: Adw.ToastOverlay toastOverlay {
    child: Adw.ToolbarView {
      [top]
      Adw.HeaderBar {
        [end]
        Switch bluetooth-toggle {}
      }

      content: Box {
        Box disabled-state {
          orientation: vertical;
          halign: center;
          valign: center;
          hexpand: true;
          spacing: 6;

          Image {
            icon-name: "bluetooth-disabled-symbolic";
            pixel-size: 100;
            margin-bottom: 30;

            css-classes: [
              'bluetooth-icon',
            ];
          }

          Label {
            label: _("Bluetooth Turned Off");

            css-classes: [
              'disabled-header',
            ];
          }

          Label {
            label: _("Turn on to connect devices.");
          }
        }

        Box enabled-state {
          orientation: vertical;
          valign: start;
          margin-top: 20;
          margin-start: 30;
          margin-end: 30;
          hexpand: true;

          Label {
            halign: start;
            label: _("Devices");
            margin-bottom: 14;

            css-classes: [
              "devices-label",
            ];
          }

          Gtk.ListBox devices {
            selection-mode: none;
            margin-start: 6;
            margin-end: 6;

            css-classes: [
              "boxed-list",
            ];

            Adw.ActionRow {
              [prefix]
              Image {
                icon-name: "bluetooth-active-symbolic";
              }

              title: "Device Name";

              [suffix]
              Label {
                label: _("Not Connected");
              }
            }

            Adw.ActionRow {
              title: "Device Name";

              [prefix]
              Image {
                icon-name: "bluetooth-active-symbolic";
              }

              [suffix]
              Label {
                label: _("Not Set Up");
              }
            }
          }
        }
      };
    };
  };
}

SizeGroup {
  mode: horizontal;
}